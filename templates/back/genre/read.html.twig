{% extends 'back/genre/_base_genre.html.twig' %}

{% block title %}Détails du genre {{ genre.name }}{% endblock %}

{% block body %}
<h1> {{ genre.name }}</h1>

<a href="{{ path('admin_genre_edit', {"id" : genre.id}) }}">éditer</a> - 
<a class="btn btn-danger" href="{{ path('admin_genre_delete', {"id" : genre.id}) }}">Supprimer</a>

<h2>Liste des films associés</h2>

<ul class="list-group list-group-flush">
{% for movie in genre.movies %}
    <li class="list-group-item">{{ movie.title }}</li>
{% endfor %}
</ul>

{% endblock %}
