{% extends 'base.html.twig' %}

{% block title %}Détails{% endblock %}

{% block body %}

<h1>{{ movie.title }}</h1>

{% for genre in movie.genres %}
<span class="badge rounded-pill bg-info text-dark">{{ genre.name }}</span>
{% endfor %}

<h2>Casting</h2>

<ul class="list-group list-group-flush">
{# on utilise le filtre sort de twig qui permet de trier les données d'un tableau #}
{% for casting in movie.castings|sort((a, b) => a.creditOrder <=> b.creditOrder) %}
    <li class="list-group-item">{{ casting.creditOrder }} - {{ casting.role }} : {{ casting.person.name }}</li>
{% endfor %}
</ul>

<a href="{{ path('homepage') }}">Retour à l'accueil</a>
{% endblock %}
